<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_item_auto_carimage"
        android:layout_width="139dp"
        android:layout_height="67dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="264dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_auto_carimage"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@drawable/chevy" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_auto_carname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_carname_item_auto"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/iv_item_auto_carimage"
        tools:ignore="MissingConstraints"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_auto_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="@string/lbl_carprice_item_auto"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/tv_item_auto_carname"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="44dp" />


</androidx.constraintlayout.widget.ConstraintLayout>